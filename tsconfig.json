{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "lib": ["es6", "dom"],
        "jsx": "react",
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@common/*": ["src/common/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["./*.ts", "client/src/**/*.tsx"],
    "exclude": ["node_modules"]
}