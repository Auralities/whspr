{
    "compilerOptions": {
        "target": "es2018",
        "allowJs": true,
        "skipLibCheck": true,
        "module": "commonjs",
        "jsx": "react",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "wavesurfer.js/dist/plugins/*": ["node_modules/wavesurfer.js/dist/plugins/*"]
        }
    },
    "include": ["./*.ts", "client/src/**/*.tsx", "server/dbmodels.ts"],
    "exclude": ["node_modules"]
}