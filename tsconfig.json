{
    "compilerOptions": {
        "target": "es2018",
        "allowJs": true,
        "skipLibCheck": true,
        "module": "commonjs",
        "jsx": "react",
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@common/*": ["src/common/*"],
            "wavesurfer.js/dist/plugins/*": ["node_modules/wavesurfer.js/dist/plugins/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
    },
    "include": ["./*.ts", "client/src/**/*.tsx", "server/dbmodels.ts"],
    "exclude": ["node_modules"]
}