{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "lib": ["es6", "dom"],
        "jsx": "react",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "wavesurfer.js/dist/plugins/*": ["node_modules/wavesurfer.js/dist/plugins/*"]
        }
    },
    "include": ["./*.ts", "client/src/**/*.tsx"],
    "exclude": ["node_modules"]
}